@using Sandbox
@using Sandbox.UI;
@using Sandbox.Utility
@using Woosh.Common

@namespace Woosh.Espionage.UI
@attribute [StyleSheet]

@inherits Panel;

<root class="carriable-deploy-overlay">
    <label class="carriable-deploy-overlay__name" text="@Name"></label>
    <label class="carriable-deploy-overlay__desc" text="@Description"></label>
</root>

@code
{
    public string Name { get; private set; }
    public string Description { get; private set; }

    private AnimatedEntity m_Target;
    private TimeSince m_SinceApplied;

    public void Override(string name, string description, AnimatedEntity viewmodel)
    {
        m_Target = viewmodel;
        m_SinceApplied = 0;

        Name = name;
        Description = description;

        StateHasChanged();
    }

    public override void Tick()
    {
        Style.Opacity = Easing.ExpoOut(1 - (m_SinceApplied / 2.4f));

        if (m_Target.IsValid())
        {
            var trans = m_Target.GetAttachment("muzzle").Value;
            this.ToWorld(trans.Position + trans.Rotation.Backward * 4);
        }
    }
}